{
  "include": [
    "demo/**/*.tsx",
    "src/**/*"
  ],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2015.core", "es2015", "dom"],
    "jsx": "react",
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
